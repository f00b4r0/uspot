Status: 200 OK
Content-Type: text/html

{{ include(header) }}

{% if (error): %}
<h2> {{ _('Invalid credentials') }} </h2>
{% endif %}

<form action="/hotspot" method="POST">
	<table>
		<tr><td><label for="fname">{{ _('Username:') }}</label></td>
			<td><input type="text" autocapitalize="off" name="username"></td>
		</tr>
		<tr><td><label for="fname">{{ _('Password:') }}</label></td>
			<td><input type="password" name="password"></td>
		</tr>
	</table>
<input type="hidden" name="action" value="{{ config.auth_mode }}">
<input type="submit" value="Login" class="btn btn-primary btn-block">
</form>

{{ include(footer) }}
